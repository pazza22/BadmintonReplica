@model IEnumerable<badminton4all.Models.Player>

@{
    ViewData["Title"] = "Players";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="fas fa-users"></i> Players
            </h1>
            <p class="lead">Browse all registered players in our community</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Register" class="btn btn-primary btn-lg">
                <i class="fas fa-user-plus"></i> Register New Player
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        @foreach (var player in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <img src="@(player.ProfilePictureUrl ?? "https://via.placeholder.com/150")" 
                                 alt="@player.FullName" 
                                 class="rounded-circle me-3" 
                                 style="width: 60px; height: 60px; object-fit: cover;">
                            <div>
                                <h5 class="card-title mb-0">@player.FullName</h5>
                                <small class="text-muted">Rank #@player.Ranking</small>
                            </div>
                        </div>
                        
                        <div class="mb-2">
                            <span class="badge @GetSkillLevelBadgeClass(player.SkillLevel)">
                                @player.SkillLevel
                            </span>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-envelope"></i> @player.Email
                            </small>
                        </div>

                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <strong>@player.TotalMatches</strong>
                                <br>
                                <small class="text-muted">Matches</small>
                            </div>
                            <div class="col-4">
                                <strong>@player.Wins</strong>
                                <br>
                                <small class="text-muted">Wins</small>
                            </div>
                            <div class="col-4">
                                <strong>@player.WinRate.ToString("0.0")%</strong>
                                <br>
                                <small class="text-muted">Win Rate</small>
                            </div>
                        </div>

                        <a asp-action="Details" asp-route-id="@player.Id" class="btn btn-outline-primary btn-sm w-100">
                            <i class="fas fa-eye"></i> View Profile
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No players registered yet. Be the first to <a asp-action="Register">register</a>!
        </div>
    }
</div>

@functions {
    string GetSkillLevelBadgeClass(badminton4all.Models.SkillLevel skillLevel)
    {
        return skillLevel switch
        {
            badminton4all.Models.SkillLevel.Beginner => "bg-secondary",
            badminton4all.Models.SkillLevel.Intermediate => "bg-info",
            badminton4all.Models.SkillLevel.Advanced => "bg-warning text-dark",
            badminton4all.Models.SkillLevel.Expert => "bg-danger",
            badminton4all.Models.SkillLevel.Professional => "bg-dark",
            _ => "bg-secondary"
        };
    }
}
